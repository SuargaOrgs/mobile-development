<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.OnBoardingPageStart">

    <ImageView
        android:id="@+id/suarga_logo"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_suarga" />

    <com.dicoding.suargaapp.customview.MyButton
        android:id="@+id/button_next"
        android:layout_width="0dp"
        android:text="@string/next"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_onboarding_start"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img_onboarding_start"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/suarga_logo"
        app:srcCompat="@drawable/img_onboarding_start" />

    <TextView
        android:id="@+id/tv_onboarding_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_onboarding_start"
        android:layout_marginTop="18dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/primary80"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_onboarding_start" />

    <TextView
        android:id="@+id/tv_desc_onboarding_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_onboarding_start"
        android:textSize="12sp"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:paddingStart="42dp"
        android:paddingEnd="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/neutral70"
        app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_start"
        tools:ignore="SmallSp" />

    <ImageView
        android:id="@+id/img_dot_1"
        android:layout_width="40dp"
        android:layout_height="6dp"
        app:layout_constraintBottom_toTopOf="@+id/button_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_onboarding_start"
        app:srcCompat="@drawable/titik1" />

</androidx.constraintlayout.widget.ConstraintLayout>